<img class="burger-image center" src="assets/img/burger.png" alt="burger icon">

<div class="wrapper">

  <h1 class="center">Eat-Da-Burger!</h1>

  <div class="row">

    <div class="column">
      <h2>Ready to eat</h2>
      {{! List uneaten burgers}}
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="column">
      <h2>Already eaten</h2>
      {{! List eaten burgers}}
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  <h2>Place an Order</h2>
  <form class="create-form center">

    <div class="form-group">
      <input type="text" id="bu" name="name" placeholder="Burger Name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>